From: Patrick Mooney <pmooney@pfmooney.com>
Date: Wed, 9 Nov 2016 10:14:46 -0600
Subject: [PATCH] PUBAPI-1346 - allow ufds_master credentials to differ from
 local ufds

---
 sapi_manifests/cloudapi/template | 7 ++++++-
 1 file changed, 6 insertions(+), 1 deletion(-)

diff --git a/sapi_manifests/cloudapi/template b/sapi_manifests/cloudapi/template
index 34fd725..fa36b0e 100644
--- a/sapi_manifests/cloudapi/template
+++ b/sapi_manifests/cloudapi/template
@@ -28,7 +28,12 @@
     "ufds_master": {
         "url": "ldaps://{{{ufds_remote_ip}}}",
         "bindDN": "{{{ufds_ldap_root_dn}}}",
-        "bindPassword": "{{{ufds_ldap_root_pw}}}",
+        {{^ufds_remote_ldap_root_pw}}
+        "bindPassword": "{{{ufds_ldap_root_pw}}}"
+        {{/ufds_remote_ldap_root_pw}}
+        {{#ufds_remote_ldap_root_pw}}
+        "bindPassword": "{{{ufds_remote_ldap_root_pw}}}"
+        {{/ufds_remote_ldap_root_pw}}
         "cache": {
             "size": 5000,
             "age": 60
