@@ -23,6 +23,9 @@
       "connectTimeout": 4000,
       "checkInterval": 90000,
       "maxConnections": {{MORAY_MAX_PG_CONNS}},
+{{#MORAY_MAX_QUEUE_LENGTH}}
+      "maxQueueLength": {{MORAY_MAX_QUEUE_LENGTH}},
+{{/MORAY_MAX_QUEUE_LENGTH}}
       "maxIdleTime": 270000,
       "user": "moray"
     }
