+        encrypted.on('data', handleEncryptedData);
+        encrypted.once('error', handleEncryptedError);
+
+        decipher.on('data', handleDecipherData);
+        decipher.once('error', handleDecipherError);
+        decipher.once('end', handleDecipherEnd);
+
