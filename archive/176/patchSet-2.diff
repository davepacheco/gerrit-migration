+tape('addLotsOfFiles', function (t) {
+    var contextFilepath = path.join(testContextDir, t.name + '.tar.gz');
+
+    var startTime = new Date().getTime();
+    testBuildContext(t, contextFilepath, function (err, result) {
+        if (showError(t, err, result.builder)) {
+            return;
+        }
+
+        // Check that build is short-ish (took less than 1 minute to complete).
+        var oneMinute = 1000 * 60;
+        var elapsed = new Date().getTime() - startTime;
+        if (elapsed > oneMinute) {
+            t.fail('Build took longer than one minute to complete, it took: '
+                + (elapsed / 1000) + ' seconds');
+        }
