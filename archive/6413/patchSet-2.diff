Date: Mon, 10 Jun 2019 11:57:08 -0700
Subject: [PATCH] TOOLS-604 want tooling to check copyrights (fix bash usage to
 not exit on first err)

---
 tools/check-copyright | 6 +++---
 1 file changed, 3 insertions(+), 3 deletions(-)

diff --git a/tools/check-copyright b/tools/check-copyright
index 4d38fef..b260b93 100755
--- a/tools/check-copyright
+++ b/tools/check-copyright
@@ -90,7 +90,7 @@ function check_file {
     # Wrong copyright year?
     if [[ "$hit" != *$year* ]]; then
         echo "error: $file: copyright year not updated to $year: '$hit'" >&2
-        (( numErrors++ ))
+        numErrors=$(( numErrors + 1 ))
         return
     fi
 
@@ -100,11 +100,11 @@ function check_file {
         if [[ -n "$optWarnOnlyOnFormat" ]]; then
             echo "warning: $file: copyright not in RFD 164 form, '$hit'" \
                 "does not match /$blessed/" >&2
-            (( numWarnings++ ))
+            numWarnings=$(( numWarnings + 1 ))
         else
             echo "error: $file: copyright not in RFD 164 form, '$hit'" \
                 "does not match /$blessed/" >&2
-            (( numErrors++ ))
+            numErrors=$(( numErrors + 1 ))
         fi
         return
     fi
