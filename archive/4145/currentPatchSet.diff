From: Noah Mehl <noahmehl@tinyhomeconsultingllc.com>
Date: Tue, 5 Jun 2018 15:01:53 -0500
Subject: [PATCH] Increase maximum MTU to 65536

---
 overlay/generic/lib/svc/method/net-physical | 6 +++---
 1 file changed, 3 insertions(+), 3 deletions(-)

diff --git a/overlay/generic/lib/svc/method/net-physical b/overlay/generic/lib/svc/method/net-physical
index d2010681..f0bc8a2e 100644
--- a/overlay/generic/lib/svc/method/net-physical
+++ b/overlay/generic/lib/svc/method/net-physical
@@ -108,13 +108,13 @@ function valid_mtu
 
     if ! [[ $mtu =~ [1-9][0-9][0-9][0-9] ]] ; then
         echo "Invalid mtu specified for tag $tag: $mtu"
-        echo "Valid MTU range is from 1500-9000"
+        echo "Valid MTU range is from 1500-65536"
         exit $SMF_EXIT_ERR_FATAL
     fi
 
-    if [[ $mtu -gt 9000 || $mtu -lt 1500 ]]; then
+    if [[ $mtu -gt 65536 || $mtu -lt 1500 ]]; then
         echo "Invalid mtu specified for tag $tag: $mtu"
-        echo "Valid MTU range is from 1500-9000"
+        echo "Valid MTU range is from 1500-65536"
         exit $SMF_EXIT_ERR_FATAL
     fi
 }
