+    var self = this;
+
+    if (self.packages[pkgUuid] === undefined) {
+        callback(new VError({
+            name: 'ResourceNotFoundError'
+        }, 'Package does not exist'));
+        return;
+    }
+
+    callback(null, self.packages[pkgUuid]);
+};
