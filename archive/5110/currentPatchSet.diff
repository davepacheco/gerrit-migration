Subject: [PATCH] MANTA-4030 many images using node 0.10 or 0.12 broken by
 transitive lru-cache@4.1.4 dep Reviewed by: Josh Wilsdon <josh@wilsdon.ca>
 Approved by: Josh Wilsdon <josh@wilsdon.ca>

---
 package.json | 4 +++-
 1 file changed, 3 insertions(+), 1 deletion(-)

diff --git a/package.json b/package.json
index a3572fa..9beab2b 100644
--- a/package.json
+++ b/package.json
@@ -1,7 +1,7 @@
 {
   "name": "fwapi",
   "description": "Firewall API for Smart DataCenter",
-  "version": "1.0.5",
+  "version": "1.0.6",
   "author": "Joyent",
   "private": true,
   "devDependencies": {
@@ -12,6 +12,7 @@
     "eslint-plugin-joyent": "~1.3.0",
     "mockery": "1.4.0"
   },
+  "// lru-cache": "attempting to pin version while satisfying transitive deps, because lru-cache@4.1.4 includes yallist@3 which breaks node --abort-on-uncaught-exception with node <v4",
   "dependencies": {
     "assert-plus": "1.0.0",
     "bunyan": "1.8.10",
@@ -22,6 +23,7 @@
     "fast-messages": "1.0.1",
     "fwrule": "2.0.0",
     "jsprim": "1.3.1",
+    "lru-cache": "4.1.3",
