+/**
+ * Looks up all the servers in the datacenter and requests that some fraction
+ * of them move their roster connections to this CNAPI instance. The number of
+ * compute nodes which will switch to sending us heartbeats will be:
+ *
+ *      num_compute_nodes / num_cnapis
+ *
+ * Where `num_compute_nodes` is the number of compute nodes in the datacenter
+ * and `num_cnapis` is the number of CNAPI instance in the datacenter,
+ * including ourselves. This is done so that each CNAPI has roughly the same
+ * number of compute nodes talking to it.
+ */
+
+App.prototype.takeRosterAuthority = function () {
+    var self = this;
+
+    var picked = [];
+    var cnapiUuids = [];
+    var serverUuids = [];
+
+    vasync.waterfall([
+        /*
+         * Get all compute nodes in datanceter.
+         */
+        getServers,
+
+        /*
+         * Identify CNAPI instances.
+         */
+        getRosterAuthorityRecords,
+
+        /*
+         * Based on the number of CNAPI instances and known servers, select
+         * a portion of the total number of servers.
+         */
+        pickServers,
+
+        /*
+         * Send a request so the picked compute nodes will initiate heartbeat
+         * connections with us.
+         */
+        changeServerHeartbeatTargets
+    ],
+    function (err) {
+        if (err) {
+            self.log.error({ err: err }, 'error taking roster authority');
+            return;
+        }
+        self.log.info('finished requesting roster authority');
+    });
+
+    function getServers(next) {
+        ModelServer.list({}, function (err, servers) {
+            if (err) {
+                next(err);
+                return;
+            }
+            serverUuids = servers.map(function (server) {
+                return server.uuid;
+            });
+            next();
+        });
+    }
+
+    function getRosterAuthorityRecords(next) {
+        self.log.info('fetching roster authority records');
+        ModelServer.listRosterAuthority(function (err, records) {
+            if (err) {
+                next(err);
+                return;
+            }
+
+            // remove duplicates
+            cnapiUuids =
+                records
+                    .map(function (record) {
+                        return record.cnapi_uuid;
+                    })
+                    .sort()
+                    .filter(function (item, i, a) {
+                        return !i || item !== a[i-1];
+                    });
+            next();
+        });
+    }
+
+    function pickServers(next) {
+        self.log.warn('picking roster authority servers');
+        var numCnapis = cnapiUuids.length || 1;
+        var toSwitchCount = Math.floor(serverUuids.length / numCnapis);
+
+        // randomly pick an amount of servers equal to `toSwitch`
+        var idx;
+        for (var i = 0; i < toSwitchCount; i++) {
+            idx = Math.floor(Math.random() * serverUuids.length);
+            picked.push(serverUuids.splice(idx, idx+1, 1)[0]);
+        }
+
+        self.log.info('taking roster authority over %d servers', toSwitchCount);
+
+        next();
+    }
+
+    function changeServerHeartbeatTargets(next) {
+        async.forEach(
+            picked,
+            function (uuid, feNext) {
+
+                var server = new ModelServer(uuid);
+
+                server.sendRequest({
+                    method: 'post',
+                    path: '/roster-authority',
+                    params: { cnapi_url: self.config.cnapi.url }
+                }, function (err) {
+                    if (err) {
+                        feNext(new restify.InternalError(err));
+                        return;
+                    }
+                    feNext();
+                });
+
+            },
+            function (err) {
+                next(err);
+            });
+    }
+};
