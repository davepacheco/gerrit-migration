         help: 'SSH key fingerprint',
         helpArg: 'FINGERPRINT'
     },
+    {
+        names: ['keyPath'],
+        type: 'string',
+        env: 'MANTA_KEY_PATH',
+        help: 'SSH private key file',
+        helpArg: 'FILE'
+    },
     {
         names: ['url', 'u'],
         type: 'string',
