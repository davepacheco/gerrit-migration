 	int nextpcifn = 1;		/* 0 reserved for primary */
 	char slotconf[MAXNAMELEN];
@@ -386,17 +387,24 @@ add_nets(int *argc, char **argv)
 		return (0);
 	}
 
-	for (net = strtok_r(nets, " ", &lasts); net != NULL;
-	    net = strtok_r(NULL, " ", &lasts)) {
+	for (net = strtok_r(nets, " ", &lasts); net != NULL; net = next_net) {
 		int pcifn;
 
+		next_net = strtok_r(NULL, " ", &lasts);
+
 		/* zoneadmd is not careful about a trailing delimiter. */
 		if (net[0] == '\0') {
 			continue;
 		}
 
-		/* Allow at most one "primary" net */
-		if (is_env_true("net", net, "primary")) {
+		/*
+		 * In case this is a "primary" net, or this is
+		 * the last network interface and no other net
+		 * is tagged as "primary", assign it to function 0
+		 */
+		if (is_env_true("net", net, "primary") ||
+		    (next_net == NULL && primary == NULL)) {
+			/* Allow at most one "primary" net */
 			if (primary != NULL) {
