Date: Thu, 30 Jun 2016 23:33:15 +0000
Subject: [PATCH] fix triton log uploading to manta

---
 tools/standalone/tritonlogupload.sh | 8 ++++----
 1 file changed, 4 insertions(+), 4 deletions(-)

diff --git a/tools/standalone/tritonlogupload.sh b/tools/standalone/tritonlogupload.sh
index e54fbe6..0ef0b8e 100755
--- a/tools/standalone/tritonlogupload.sh
+++ b/tools/standalone/tritonlogupload.sh
@@ -86,7 +86,7 @@ function upload_files() {
         echo "no files to upload"
         return
     fi
-        
+
     nfiles=$(echo "$files" | wc -l)
     echo "upload $nfiles file(s) from $SRCDIR to $dstMdir"
     for f in $files
@@ -101,10 +101,10 @@ function upload_files() {
         hourdir=$($DATE -d \@$(( $($DATE -d $isotime "+%s") - 3600 )) "+%Y/%m/%d/%H")
         targ="$dstMdir/$logname/$hourdir/$nodename.log"
 
-        upload_file $f $targ $dryrun
-        echo "rm $f"
+        upload_file $SRCDIR/$f $targ $dryrun
+        echo "rm $SRCDIR/$f"
         if [[ $dryrun == "no" ]]; then
-            rm $f
+            rm $SRCDIR/$f
         fi
     done
 }
