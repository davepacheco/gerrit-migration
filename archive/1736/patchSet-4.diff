 1 file changed, 3 insertions(+), 3 deletions(-)

diff --git a/lib/moray.js b/lib/moray.js
index fe8050c..491f308 100644
--- a/lib/moray.js
+++ b/lib/moray.js
@@ -5,7 +5,7 @@
  */
 
