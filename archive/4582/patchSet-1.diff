+#ifndef __xpv
+/*
+ * As per Intel Vol 3 27.5.2, the GDTR limit is reset to 64Kb on a VM exit, so
+ * we have to manually fix it up ourselves.
+ */
+void
+reset_gdtr_limit(void)
+{
+	desctbr_t gdtr;
+
+	ASSERT(curthread->t_preempt);
+
+	rd_gdtr(&gdtr);
+	gdtr.dtr_limit = (sizeof (user_desc_t) * NGDT) - 1;
+	wr_gdtr(&gdtr);
+}
+#endif /* __xpv */
