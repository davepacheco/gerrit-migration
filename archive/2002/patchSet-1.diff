From: Jerry Jelinek <jerry.jelinek@joyent.com>
Date: Thu, 25 May 2017 13:08:15 +0000
Subject: [PATCH] OS-6144 WARNING: Sorry, no swap space to grow stack for pid
 XXX (zsched)

---
 usr/src/uts/common/brand/lx/os/lx_misc.c | 41 +++++++++++++-----------
 1 file changed, 23 insertions(+), 18 deletions(-)

diff --git a/usr/src/uts/common/brand/lx/os/lx_misc.c b/usr/src/uts/common/brand/lx/os/lx_misc.c
index 54e5331e99..26dd80fe34 100644
--- a/usr/src/uts/common/brand/lx/os/lx_misc.c
+++ b/usr/src/uts/common/brand/lx/os/lx_misc.c
@@ -1061,28 +1061,33 @@ lx_read_argv_bounds(proc_t *p)
 		}
 	}
 
-	mutex_exit(&p->p_lock);
+	if (addr_arg != NULL || addr_env != NULL) {
+		mutex_exit(&p->p_lock);
 #if defined(_LP64)
-	if (p->p_model != DATAMODEL_NATIVE) {
-		uint32_t buf32;
-		if (copyin((void *)addr_arg, &buf32, sizeof (buf32)) == 0) {
-			arg_start = (uintptr_t)buf32;
-		}
-		if (copyin((void *)addr_env, &buf32, sizeof (buf32)) == 0) {
-			env_start = (uintptr_t)buf32;
-		}
-	} else
+		if (p->p_model != DATAMODEL_NATIVE) {
+			uint32_t buf32;
+			if (copyin((void *)addr_arg, &buf32, sizeof (buf32))
+			    == 0) {
+				arg_start = (uintptr_t)buf32;
+			}
+			if (copyin((void *)addr_env, &buf32, sizeof (buf32))
+			    == 0) {
+				env_start = (uintptr_t)buf32;
+			}
+		} else
 #endif /* defined(_LP64) */
-	{
-		uintptr_t buf;
-		if (copyin((void *)addr_arg, &buf, sizeof (buf)) == 0) {
-			arg_start = buf;
-		}
-		if (copyin((void *)addr_env, &buf, sizeof (buf)) == 0) {
-			env_start = buf;
+		{
+			uintptr_t buf;
+			if (copyin((void *)addr_arg, &buf, sizeof (buf)) == 0) {
+				arg_start = buf;
+			}
+			if (copyin((void *)addr_env, &buf, sizeof (buf)) == 0) {
+				env_start = buf;
+			}
 		}
+		mutex_enter(&p->p_lock);
 	}
-	mutex_enter(&p->p_lock);
+
 	pd->l_args_start = arg_start;
 	pd->l_envs_start = env_start;
 	pd->l_envs_end = env_end;
