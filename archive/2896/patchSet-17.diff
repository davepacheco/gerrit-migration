+                    function cpCb(err, stdout) {
+                        // No metadata found:
+                        if (err && err.code === 1) {
+                            ctx.protoMode = false;
+                            next();
+                            return;
+                        }
+                        if (err) {
+                            next(err);
+                            return;
+                        }
+
+                        if (stdout.trim() !== 'true') {
+                            next(new Error(util.format(
