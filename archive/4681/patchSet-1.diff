+                'bootrom': 'uefi'
+            }
+        }
+    },
+    {
+        name: 'bad minimal, requirements.bootrom with requirements.brand=kvm',
+        errs: [{
+            field: 'requirements.bootrom',
+            code: 'Invalid',
+            message: /not supported with "kvm" brand/
+        }],
+        manifest: {
+            'v': 2,
+            'uuid': '1f9b7958-289e-4ea3-8f88-5486a40d6823',
+            'urn': 'booga:booga',
+            'name': 'foo',
+            'version': '1.2.3',
+            'type': 'zvol',
+            'os': 'linux',
+            'requirements': {
+                'brand': 'kvm',
+                'bootrom': 'uefi'
+            }
+        }
     }
 ];
 
