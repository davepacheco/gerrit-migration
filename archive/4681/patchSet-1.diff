+                'bootrom': '/some/path'
+            }
+        }
+    },
+    {
+        name: 'bad minimal, requirements.bootrom without requirements.brand',
+        errs: [{
+            field: 'requirements.bootrom',
+            code: 'MissingParameter',
+            message: /requirements\.brand/
+        }],
+        manifest: {
+            'v': 2,
+            'uuid': '1f9b7958-289e-4ea3-8f88-5486a40d6823',
+            'urn': 'booga:booga',
+            'name': 'foo',
