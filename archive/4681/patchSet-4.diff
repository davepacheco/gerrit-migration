 package.json        |   2 +-
 test/basics.test.js | 102 +++++++++++++++++++++++++++++++++++++++++++-
 3 files changed, 136 insertions(+), 3 deletions(-)

diff --git a/lib/imgmanifest.js b/lib/imgmanifest.js
index 9272f85..42dbfa5 100644
--- a/lib/imgmanifest.js
+++ b/lib/imgmanifest.js
@@ -5,7 +5,7 @@
