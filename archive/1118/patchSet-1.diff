+++ b/lib/sdc-vmadm.js
@@ -578,7 +578,7 @@ CLI.prototype.do_create = function (subcmd, opts, args, callback) {
                 if (err) {
                     return next(new errors.APIError(err));
                 }
-                p('VM %s (job "%s") created', job['vm_uuid'], job['job_uuid']);
+                p('Creating VM %s (job "%s")', job['vm_uuid'], job['job_uuid']);
                 next();
             });
         }
