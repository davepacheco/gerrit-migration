Subject: [PATCH] joyent/node-zkstream#48 doublecheck timer firing too often

---
 lib/zk-session.js | 4 ++--
 package.json      | 2 +-
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/lib/zk-session.js b/lib/zk-session.js
index eac1230..43a6f53 100644
--- a/lib/zk-session.js
+++ b/lib/zk-session.js
@@ -32,8 +32,8 @@ var METRIC_ZK_NOTIFICATION_COUNTER = 'zookeeper_notifications';
  * up to DOUBLECHECK_RAND. This spreads out the probes and avoids inducing
  * too much load on ZK.
  */
-var DOUBLECHECK_TIMEOUT = 900*1000;
-var DOUBLECHECK_RAND = 600*1000;
+var DOUBLECHECK_TIMEOUT = 4*3600*1000;
+var DOUBLECHECK_RAND = 8*3600*1000;
 
 function ZKSession(opts) {
 	mod_assert.object(opts, 'options');
