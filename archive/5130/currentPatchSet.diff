   "author": "Joyent (joyent.com)",
   "private": true,
   "dependencies": {
@@ -11,7 +11,7 @@
     "mkdirp": "0.5.1",
     "nopt": "2.0.0",
     "progbar": "1.1.1",
-    "sdc-clients": "12.1.0",
+    "sdc-clients": "12.1.1",
     "restify-clients": "1.6.0",
     "strsplit": "1.0.0",
