--- a/smf/method/net-agent.in
+++ b/smf/method/net-agent-setup
@@ -6,11 +6,11 @@
 #
 
 #
-# Copyright (c) 2015, Joyent, Inc.
+# Copyright (c) 2017, Joyent, Inc.
 #
 
 #
-# SMF Startup script for net-agent
+# Runs on node (CN + HN) boot to setup log rotation for net-agent logs.
 #
 
 set -o xtrace
@@ -37,7 +37,6 @@ function setup_logadm {
 case "$1" in
 'start')
     setup_logadm
-    /usr/bin/ctrun -l child -o noorphan @@ROOT@@/node/bin/node --abort_on_uncaught_exception @@ROOT@@/bin/net-agent &
     ;;
 
 'stop')
