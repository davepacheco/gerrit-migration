+         */
+        setImmediate(done, 'error', err);
     });
 
     if (this._queryTimeout > 0) {
@@ -231,11 +257,10 @@ PGClient.prototype.query = function clientQuery(sql, args) {
             var err = new QueryTimeoutError(sql);
 
             /*
