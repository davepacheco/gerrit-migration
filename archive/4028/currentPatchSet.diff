+        ended = true;
+
+        self.removeListener('conn-error', onConnError);
         clearTimeout(timer);
+
+        res.emit(event, arg);
+    }
+
+    function onConnError(err) {
+        dtrace['query-conn-error'].fire(function () {
+            return ([reqid, sql, err.toString()]);
+        });
+
+        done('error', err);
     }
 
     req = new pg.Query(sql, args);
@@ -190,7 +206,7 @@ PGClient.prototype.query = function clientQuery(sql, args) {
             row: row
         }, 'query: row');
 
-        if (aborted) {
+        if (ended) {
             return;
         }
 
