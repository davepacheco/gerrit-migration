+    if (!slot) {
+        throwErr(errors.missingParamErr('pci_slot'));
+    } else if (!PCI_SLOT_RE.test(slot)) {
+        throwErr(errors.invalidParamErr('pci_slot', 'Not a valid value'));
+    }
