+        throwErr(errors.invalidParamErr('pci_slot', 'Not a valid value'));
+    } else if (PCI_SLOT_DEV_RESERVED.indexOf(dev) !== -1) {
+        throwErr(errors.invalidParamErr('pci_slot', 'Reserved device ID'));
+    }
+
+    return true;
+};
