From ff3c13849fbfff94e2ccedad7c830870bf62d4bf Mon Sep 17 00:00:00 2001
From: Josh Wilsdon <jwilsdon@joyent.com>
Date: Mon, 6 Feb 2017 21:21:50 -0800
Subject: [PATCH] HEAD-2347 bump default COAL DRAM to 6G

---
 bin/build-coal-image | 6 +++---
 build.spec           | 2 +-
 2 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/bin/build-coal-image b/bin/build-coal-image
index a53971d2..8ed5cbda 100755
--- a/bin/build-coal-image
+++ b/bin/build-coal-image
@@ -6,7 +6,7 @@
 #
 
 #
-# Copyright 2015 Joyent, Inc.
+# Copyright 2017 Joyent, Inc.
 #
 
 ROOT=$(cd $(dirname $0)/../; pwd)
@@ -278,10 +278,10 @@ function create_output
 
     coal_memsize=$(build_spec coal-memsize)
     if [[ -n ${coal_memsize} ]]; then
-        if [[ ${coal_memsize} < 4096 ]]; then
+        if [[ ${coal_memsize} < 6144 ]]; then
             # BEGIN BASHSTYLED
             echo "* * *"
-            echo "* Warning: Your COAL memory size (coal-memsize) is set to <4096 MiB."
+            echo "* Warning: Your COAL memory size (coal-memsize) is set to <6144 MiB."
             echo "* That is likely to cause problems in your COAL. Consider a larger"
             echo "* value for 'coal-memsize' in 'build.spec.local'."
             echo "* * *"
diff --git a/build.spec b/build.spec
index f3cfae13..0ec58d16 100644
--- a/build.spec
+++ b/build.spec
@@ -1,7 +1,7 @@
 {
   "vmware_version": 5,
   "build-tgz": "true",
-  "coal-memsize": 4096,
+  "coal-memsize": 6144,
   "coal-enable-serial": true,
   "no-rabbit": true,
   "clean-cache": true,
