+
+#
+# Usage:
+#
+#     ip_forwarding.ksh -flnpvu <client> <router> <server>
+#
+#     Where client, router, and server are the UUIDs of three native
+#     zones. The user must create and start these zones; but other
+#     than that there is no special configuration required for them.
+#
+#     -c	Run cleanup only.
+#
+#     -f	Full ULP hardware checksum.
+#
+#     -l	Hardware TCP LSO.
+#
+#     -n	No cleanup: the various artifacts created by this script will
+#               remain after execution.
+#
+#     -p	Partial ULP hardware checksum.
+#
+#     -u	Run UDP tests.
+#
+#     -v	Vebose mode.
+#
+
+if [[ -z $NET_TESTS ]]; then
+	echo "NET_TESTS not set" >&2
+	exit 1
+fi
+
+. $NET_TESTS/tests/net_common
+
+function cleanup
+{
+	rm -rf ${tdirprefix}*
+	rm -rf /zones/$client/root/${tdirprefix}*
+	rm -rf /zones/$server/root/${tdirprefix}*
+
+	rm_route $client $server_ip 192.168.88.0/24 192.168.77.1
+	rm_route $server $client_ip 192.168.77.0/24 192.168.88.1
+	rm_route6 $client $server_ip6 fd00:0:1:58::/64 $client_router_ip6
+	rm_route6 $server $client_ip6 fd00:0:1:4d::/64 $server_router_ip6
+
+	ip_fwd_disable $router
+
+	delete_addr $client ipft_client0 v4
+	delete_addr $router ipft_client_r0 v4
+	delete_addr $router ipft_server_r0 v4
+	delete_addr $server ipft_server0 v4
+
+	delete_addr $client ipft_client0 v6
+	delete_addr $router ipft_client_r0 v6
+	delete_addr $router ipft_server_r0 v6
+	delete_addr $server ipft_server0 v6
+
+	delete_if $client ipft_client0
+	delete_if $router ipft_client_r0
+	delete_if $router ipft_server_r0
+	delete_if $server ipft_server0
+
+	delete_vnic ipft_client0 ipft_nic0 0 $client
+	delete_vnic ipft_client_r0 ipft_nic1 0 $router
+	delete_vnic ipft_server_r0 ipft_nic1 5 $router
+	delete_vnic ipft_server0 ipft_nic1 5 $server
+
+	delete_simnet ipft_nic0
+	delete_simnet ipft_nic1
+}
+
+function usage
+{
+	echo "$tname -cflnpuv <client> <router> <server>" >&2
+}
+
+#
+# Set test defaults.
+#
+tname=${NT_TNAME:-$(basename $0)}
+ulp_full=0
+ulp_partial=0
+tcp_lso=0
+udp=0
+cleanup=1
+cleanup_only=0
+
+tdirprefix=/tmp/${tname}
+tdir=${tdirprefix}.$$
+dfile=${tdir}/${tname}.data
+efile=${tdir}/${tname}-expected-sha1
+rfile=${tdir}/${tname}-received-sha1
+ofile=${tdir}/${tname}-received
+client_ip=192.168.77.2
+server_ip=192.168.88.2
+client_ip6=fd00:0:1:4d::2
+client_router_ip6=fd00:0:1:4d::1
+server_router_ip6=fd00:0:1:58::1
+server_ip6=fd00:0:1:58::2
+
+while getopts "cflnpuv" opt; do
+	case $opt in
+	c)
+		cleanup_only=1
+		;;
+	f)
+		ulp_full=1
+		;;
+	l)
+		tcp_lso=1
+		;;
+	n)
+		cleanup=0
+		;;
+	p)
+		ulp_partial=1
+		;;
+	u)
+		udp=1
+		;;
+	v)
+		DEBUG=1
+		;;
+	esac
+done
+
+shift $((OPTIND - 1))
+
+if ((ulp_partial == 1)) && ((ulp_full == 1)); then
+	fail "both partial and full checksum enabled"
+fi
+
+if (( $# != 3 )); then
+	usage
+	fail "wrong number of arguments"
+fi
+
+client=$1
+router=$2
+server=$3
+
+if [[ "$client" == "$router" || "$router" == "$server" ||
+	      "$client" == "$server" ]]; then
+	fail "all zones must be unique"
+fi
+
+dbg "client zone: $client"
+dbg "router zone: $router"
+dbg "server zone: $server"
+
+BAIL=1
+zone_exists $client || fail "zone $client not found"
+zone_exists $router || fail "zone $router not found"
+zone_exists $server || fail "zone $server not found"
+
+zone_running $client
+zone_running $router
+zone_running $server
+
+#
+# Make a best effort to cleanup artifacts from a previous run.
+#
+if ((cleanup_only == 1)); then
+	dbg "performing cleanup only"
+	BAIL=0
+	cleanup
+	BAIL=1
+	exit 0
+fi
+
+mkdir $tdir /zones/$client/root/$tdir /zones/$server/root/$tdir
+
+create_simnet ipft_nic0
+create_simnet ipft_nic1
+link_simnets ipft_nic0 ipft_nic1
+
+if ((ulp_partial == 1)); then
+	set_linkprop ipft_nic0 _tx_partial_cksum 1
+	set_linkprop ipft_nic1 _tx_partial_cksum 1
+fi
+
+if ((ulp_full == 1)); then
+	set_linkprop ipft_nic0 _tx_full_cksum 1
+	set_linkprop ipft_nic1 _tx_full_cksum 1
+fi
+
+if ((ulp_full == 1)) || ((ulp_partial == 1)); then
+	set_linkprop ipft_nic0 _tx_ip_cksum 1
+	set_linkprop ipft_nic1 _tx_ip_cksum 1
+fi
+
+if ((tcp_lso == 1)); then
+	set_linkprop ipft_nic0 _lso 1
+	set_linkprop ipft_nic1 _lso 1
+fi
+
+create_vnic ipft_client0 ipft_nic0 0 $client
+create_vnic ipft_client_r0 ipft_nic1 0 $router
+create_vnic ipft_server_r0 ipft_nic1 5 $router
+create_vnic ipft_server0 ipft_nic1 5 $server
+
+ip_fwd_enable $router
+
+create_addr $client ipft_client0 $client_ip/24
+create_addr $router ipft_client_r0 192.168.77.1/24
+create_addr $router ipft_server_r0 192.168.88.1/24
+create_addr $server ipft_server0 $server_ip/24
+
+add_route $client $server_ip 192.168.88.0/24 192.168.77.1
+add_route $server $client_ip 192.168.77.0/24 192.168.88.1
+
+create_addr6 $client ipft_client0 $client_ip6
+create_addr6 $router ipft_client_r0 $client_router_ip6
+create_addr6 $router ipft_server_r0 $server_router_ip6
+create_addr6 $server ipft_server0 $server_ip6
+
+add_route6 $client $server_ip6 fd00:0:1:58::/64 $client_router_ip6
+add_route6 $server $client_ip6 fd00:0:1:4d::/64 $server_router_ip6
+
+dd if=/dev/urandom of=$dfile bs=1024 count=1024 > /dev/null 2>&1
+if (($? != 0)); then
+	fail "failed to create data file: $dfile"
+else
+	dbg "created data file: $dfile"
+fi
+
+digest -a sha1 $dfile > $efile
+
+# ================================================================
+# client -> server
+# ================================================================
+ping $client $client_ip $server_ip
+ping $client $client_ip6 $server_ip6
+
+start_server $server TCP4 $server_ip 7774 $ofile
+listener_ppid=$!
+
+# Give the server time to start.
+sleep 1
+
+dbg "sending 1M $client ($client_ip) -> $server ($server_ip)"
+zlogin $client /usr/bin/socat -b 8192 STDIN \
+       TCP4:$server_ip:7774,connect-timeout=5 < $dfile
+
+if (($? != 0)); then
+	pkill -TERM -P $listener_ppid
+	fail "failed to run socat client"
+else
+	dbg "sent 1M $client ($client_ip) -> $server ($server_ip)"
+fi
+
+#
+# The client may have exited but make sure to give the server time to
+# exit and finish computing the SHA1.
+#
+dbg "waiting for listener $listener_ppid"
+wait_for_pid $listener_ppid 5
+dbg "listener $listener_ppid exited"
+
+digest -a sha1 /zones/$server/root/$ofile > $rfile
+
+if ! diff $efile $rfile; then
+	fail "SHA1 comparison failed"
+else
+	dbg "SHA1 comparison passed"
+fi
+
+start_server $server TCP6 $server_ip6 7776 $rfile
+listener_ppid=$!
+
+# Give the server time to start.
+sleep 1
+
+zlogin $client /usr/bin/socat -b 8192 STDIN \
+       TCP6:[${server_ip6}]:7776,connect-timeout=5 < $dfile
+
+if (($? != 0)); then
+	pkill -TERM -P $listener_ppid
+	fail "failed to run socat client IPv6"
+else
+	dbg "sent 1M $client ($client_ip6) -> $server ($server_ip6) IPv6"
+fi
+
+#
+# The client may have exited but make sure to give the server time to
+# exit and finish computing the SHA1.
+#
+dbg "waiting for listener $listener_ppid"
+wait_for_pid $listener_ppid 5
+dbg "listener $listener_ppid exited"
+
+digest -a sha1 /zones/$server/root/$ofile > $rfile
+
+if ! diff $efile $rfile; then
+	fail "SHA1 comparison failed"
+else
+	dbg "SHA1 comparison passed"
+fi
+
+if ((udp == 1)); then
+	ping_udp $client $client_ip $server_ip 256 3
+	ping_udp $client $client_ip6 $server_ip6 256 3
+
+	#
+	# Test IP fragmentation by sending a larger-than-MTU datagram.
+	# You can verify fragmentation is happening by dtracing the
+	# various "Frag" and "Reasm" mibs.
+	#
+	dbg "test IP fragmentation $client_ip -> $server_ip"
+	ping_udp $client $client_ip $server_ip $((1024 * 16)) 3
+
+	dbg "test IPv6 fragmentation $client_ip6 -> $server_ip6"
+	ping_udp $client $client_ip6 $server_ip6 $((1024 * 16)) 3
+fi
+
+# ================================================================
+# server -> client
+# ================================================================
+ping $server $server_ip $client_ip
+ping $server $server_ip6 $client_ip6
+
+start_server $client TCP4 $client_ip 7774 $ofile
+listener_ppid=$!
+
+# Give the listener time to start.
+sleep 1
+
+zlogin $server /usr/bin/socat -b 8192 STDIN \
+       TCP4:$client_ip:7774,bind=$server_ip,connect-timeout=5 < $dfile
+
+if (($? != 0)); then
+	pkill -TERM -P $listener_ppid
+	fail "failed to run socat client"
+else
+	dbg "sent 1M $server ($server_ip) -> $client ($client_ip)"
+fi
+
+#
+# The client may have exited but make sure to give the server time to
+# exit and finish computing the SHA1.
+#
+dbg "waiting for listener $listener_ppid"
+wait_for_pid $listener_ppid 5
+dbg "listener $listener_ppid exited"
+
+digest -a sha1 /zones/$client/root/$ofile > $rfile
+
+if ! diff $efile $rfile; then
+	fail "SHA1 comparison failed"
+else
+	dbg "SHA1 comparison passed"
+fi
+
+start_server $client TCP6 $client_ip6 7776 $ofile
+listener_ppid=$!
+
+# Give the listener time to start.
+sleep 1
+
+zlogin $server /usr/bin/socat -b 8192 STDIN \
+       TCP6:[$client_ip6]:7776,connect-timeout=5 < $dfile
+
+if (($? != 0)); then
+	pkill -TERM -P $listener_ppid
+	fail "failed to run socat client IPv6"
+else
+	dbg "sent 1M $server ($server_ip6) -> $client ($client_ip6)"
+fi
+
+#
+# The client may have exited but make sure to give the server time to
+# exit and finish computing the SHA1.
+#
+dbg "waiting for listener $listener_ppid"
+wait_for_pid $listener_ppid 5
+dbg "server $listener_ppid exited"
+
+digest -a sha1 /zones/$client/root/$ofile > $rfile
+
+if ! diff $efile $rfile; then
+	fail "SHA1 comparison failed"
+else
+	dbg "SHA1 comparison passed"
+fi
+
+if ((udp == 1)); then
+	ping_udp $server $server_ip $client_ip 256 3
+	ping_udp $server $server_ip6 $client_ip6 256 3
+
+	#
+	# Test IP fragmentation by sending a larger-than-MTU datagram.
+	# You can verify fragmentation is happening by dtracing the
+	# various "Frag" and "Reasm" mibs.
+	#
+	dbg "test IP fragmentation $server_ip -> $client_ip"
+	ping_udp $server $server_ip $client_ip $((1024 * 16)) 3
+
+	dbg "test IPv6 fragmentation $server_ip6 -> $client_ip6"
+	ping_udp $server $server_ip6 $client_ip6 $((1024 * 16)) 3
+fi
+
+if ((cleanup == 0)); then
+	dbg "skipping cleanup"
+	echo "PASS [$tname]"
+	exit 0
+fi
+
+cleanup
+echo "PASS [$tname]"
