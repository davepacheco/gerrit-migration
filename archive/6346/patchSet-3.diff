+		maybe_fail "$err1"
+	fi
+
+	dbg "deleting VNIC: $vnic_info"
+	if dladm delete-vnic $name > /dev/null; then
+		dbg "deleted VNIC: $vnic_info"
+		return 0
+	fi
+
+	maybe_fail "$err2"
+}
+
