@@ -62,21 +62,23 @@ function gtar_unlink_dir
     gtarargs="$4"
 
     local attempts=5
+    local nicecommand="nice -n 5"
     local status=
     local uncompresscat=
-    local uncompressopt=
+    local uncompresscatopts=
+    local uncompressgtaropts=
 
     case $compression in
     none)
         uncompresscat=cat
         ;;
     gzip)
-        uncompresscat=cat
-        uncompressopt=z
+        uncompresscat=pigz
+        uncompresscatopts="-dc -p 2"
         ;;
     bzip2)
         uncompresscat=cat
-        uncompressopt=j
+        uncompressgtaropts=j
         ;;
     xz)
         uncompresscat=xzcat
@@ -93,8 +95,8 @@ function gtar_unlink_dir
