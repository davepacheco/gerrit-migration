+            vasync.forEachPipeline({
+                func: cloneOneImage,
+                inputs: ctx.imagesToClone
+            }, function _cloneImgPipeCb(err) {
+                if (err) {
+                    // Failure - cleanup newly created/cloned images.
+                    vasync.forEachPipeline({
+                        func: cleanupDeleteOneImage,
+                        inputs: clonedImages
+                    }, function _deleteImgPipeCb() {
+                        pipeNext(err);
+                        return;
+                    });
+                }
+                pipeNext();
+            });
+        },
