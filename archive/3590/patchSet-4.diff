+        }
+
+    ]}, function (err) {
+        if (err) {
+            log.error({account: account, image: image.uuid},
+                'Unable to clone image: %s', err);
+            next(err);
+            return;
+        }
+
+        var finalImage = clonedImages[clonedImages.length - 1];
+        res.send(finalImage.serialize(app.mode, req.getVersion()));
+        next();
+    });
+}
