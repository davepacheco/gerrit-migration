+function setupMantaBuckets(log, client, cb) {
+    return (vasync.forEachParallel({
+        func: createBucket,
+        inputs: [ {
+            client: client,
+            bucket: BUCKET,
+            opts: {
+                index: SCHEMA,
+                post: POST,
+                options: {
+                    version: BUCKET_VERSION
