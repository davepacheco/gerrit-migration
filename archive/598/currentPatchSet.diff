---
 bin/sdc-listmachines | 2 +-
 lib/cli_common.js    | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/bin/sdc-listmachines b/bin/sdc-listmachines
index f41fa93..4627283 100755
--- a/bin/sdc-listmachines
+++ b/bin/sdc-listmachines
@@ -27,7 +27,7 @@ var Options = {
     'state': String,
     'tag': [String, Array],
     'type': String,
-    'tombstone': Number,
+    'tombstone': Boolean,
     'url': url,
     'version': Boolean,
     'verbose': Boolean,
diff --git a/lib/cli_common.js b/lib/cli_common.js
index 1fad45e..848a219 100644
--- a/lib/cli_common.js
+++ b/lib/cli_common.js
@@ -62,7 +62,7 @@ var MasterOptions = {
         'the state of the instance (i.e. running, stopped ...) (default: all)',
     type: 'filter by type (default: all)',
     tombstone:
-        'include instances destroyed in the last N minutes (default: none)',
+        'include destroyed and failed instances on record (default: false)',
     image: 'the machine image id (UUID)',
     // snapshot
     snapshot: 'snapshot name',
