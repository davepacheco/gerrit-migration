+                if (!watcher.done) {
+                    if (count > maxSecs) {
+                        t.ok(false, 'Timed out waiting for the watcher to end');
+                        t.done();
+                        return;
+                    }
+                    setTimeout(waitForWatcherEnd, 5000);
+                    return;
+                }
+
+                var events = watcher.events.pop();
