+    if (!machine) {
+        callback();
+        return;
+    }
+
+    var migrationFailed = false;
+
+    var httpClient = restify.createHttpClient({
+        url: client.url.href,
+        version: client.headers['accept-version'],
+        retryOptions: {
+            retry: 0
+        },
+        log: client.log,
+        rejectUnauthorized: false,
