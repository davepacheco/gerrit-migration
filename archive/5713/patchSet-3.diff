+                            'Should have duration_ms and started_timestamp');
+                    }
+                });
+                t.done();
+            }
+
+            waitForWatcherEnd();
+        });
+
+        suite.test('List migrations after ' + action, function (t) {
+            var url = '/my/migrations';
+            // Should get at least a migration.
+            client.get(url, function (err, req, res, body) {
