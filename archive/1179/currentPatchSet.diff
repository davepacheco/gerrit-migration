--- a/lib/set.js
+++ b/lib/set.js
@@ -46,9 +46,10 @@ function CueBallConnectionSet(options) {
 
 	mod_assert.optionalObject(options.log, 'options.log');
 	this.cs_log = options.log || mod_bunyan.createLogger({
