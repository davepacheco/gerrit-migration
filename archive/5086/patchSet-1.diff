From 083592d94db1ab7be7d76e94ca4be0c25bdb2a4e Mon Sep 17 00:00:00 2001
From: Tim Foster <tim.foster@joyent.com>
Date: Wed, 21 Nov 2018 16:36:34 +0000
Subject: [PATCH] MANTA-4022 propeller's nodunit dep no longer installable with
 prebuilt node version

---
 Makefile     | 4 ++--
 package.json | 2 +-
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/Makefile b/Makefile
index ab8b4f0..bd424b9 100644
--- a/Makefile
+++ b/Makefile
@@ -5,7 +5,7 @@
 #
 
 #
-# Copyright (c) 2014, Joyent, Inc.
+# Copyright (c) 2018, Joyent, Inc.
 #
 
 #
@@ -84,7 +84,7 @@ CLEAN_FILES += $(NODEUNIT) ./node_modules/nodeunit
 .PHONY: test
 test: $(NODEUNIT)
 	mkdir -p ./tmp
-	find test/ -name '*.test.js' | xargs -n 1 $(NODEUNIT)
+	find test/ -name '*.test.js' | xargs -n 1 $(NODE_EXEC) $(NODEUNIT)
 
 .PHONY: scripts
 scripts: deps/manta-scripts/.git
diff --git a/package.json b/package.json
index 5734196..e03914a 100644
--- a/package.json
+++ b/package.json
@@ -16,7 +16,7 @@
                 "vasync": "1.5.0"
         },
         "devDependencies": {
-                "nodeunit": "0.7.4"
+                "nodeunit": "0.10.1"
         },
         "engines": {
                 "node": "0.10.30"
