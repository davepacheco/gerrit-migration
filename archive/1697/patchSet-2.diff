 test/papi.test.js |   8 +--
 2 files changed, 67 insertions(+), 93 deletions(-)

diff --git a/lib/papi.js b/lib/papi.js
index 0fd82da..c7dae1d 100644
--- a/lib/papi.js
+++ b/lib/papi.js
@@ -5,7 +5,7 @@
  */
 
