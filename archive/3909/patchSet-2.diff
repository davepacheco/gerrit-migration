From: Cody Peter Mello <cody.mello@joyent.com>
Date: Tue, 4 Sep 2018 16:15:41 +0000
Subject: [PATCH] TRITON-369 NAPI should use node v6.x

---
 Makefile     | 6 +++---
 package.json | 8 ++++----
 2 files changed, 7 insertions(+), 7 deletions(-)

diff --git a/Makefile b/Makefile
index bacf633..80a09f2 100644
--- a/Makefile
+++ b/Makefile
@@ -5,7 +5,7 @@
 #
 
 #
-# Copyright 2017, Joyent, Inc.
+# Copyright 2018, Joyent, Inc.
 #
 
 #
@@ -41,7 +41,7 @@ JSON_FILES  := package.json config.json.sample
 ifeq ($(shell uname -s),SunOS)
 	# Allow building on a SmartOS image other than sdc-*-multiarch 15.4.1.
 	NODE_PREBUILT_IMAGE=18b094b0-eb01-11e5-80c1-175dac7ddf02
-	NODE_PREBUILT_VERSION=v0.10.48
+	NODE_PREBUILT_VERSION=v6.14.3
 	NODE_PREBUILT_TAG := zone
 endif
 
@@ -78,7 +78,7 @@ CLEAN_FILES += ./node_modules/tape
 
 .PHONY: test
 test: $(ISTANBUL) $(FAUCET)
-	$(ISTANBUL) cover --print none test/unit/run.js | $(FAUCET)
+	$(NODE) $(ISTANBUL) cover --print none test/unit/run.js | $(FAUCET)
 
 #
 # Packaging targets
diff --git a/package.json b/package.json
index 8cb37b7..a86c94b 100644
--- a/package.json
+++ b/package.json
@@ -1,12 +1,12 @@
 {
   "name": "napi",
   "description": "SmartDataCenter Networking API",
-  "version": "1.3.0",
+  "version": "1.3.1",
   "author": "Joyent (joyent.com)",
   "private": true,
   "dependencies": {
     "assert-plus": "1.0.0",
-    "bunyan": "1.8.10",
+    "bunyan": "1.8.12",
     "clone": "1.0.2",
     "cmdln": "3.0.2",
     "dashdash": "1.7.3",
@@ -17,7 +17,7 @@
     "macaddr": "0.0.1",
     "mooremachine": "2.2.0",
     "moray": "3.4.2",
-    "node-uuid": "1.4.7",
+    "node-uuid": "1.4.8",
     "portolan-moray": "git+https://github.com/joyent/sdc-portolan-moray.git#7e2c4ca",
     "restify": "4.3.0",
     "restify-warden": "1.1.0",
@@ -29,7 +29,7 @@
     "verror": "1.9.0"
   },
   "devDependencies": {
-    "moray-sandbox": "0.2.0",
+    "moray-sandbox": "0.2.1",
