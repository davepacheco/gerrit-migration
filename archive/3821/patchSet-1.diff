 #include "vmm_lapic.h"
 #include "vmm_ktr.h"
@@ -102,6 +103,7 @@ struct pptdev {
 	dev_info_t		*pptd_dip;
 	list_node_t		pptd_node;
 	ddi_acc_handle_t	pptd_cfg;
+	int			pptd_pba_bar;
 	struct pptbar		pptd_bars[PCI_BASE_NUM];
 	struct vm		*vm;
 	struct pptseg mmio[MAX_MMIOSEGS];
@@ -318,6 +320,54 @@ ppt_ioctl(dev_t dev, int cmd, intptr_t arg, int md, cred_t *cr, int *rv)
 	return (0);
 }
 
+static int
+ppt_find_pba_bar(struct pptdev *ppt)
+{
+	uint16_t base;
+	uint32_t pba_off;
+
+	if (PCI_CAP_LOCATE(ppt->pptd_cfg, PCI_CAP_ID_MSI_X, &base) !=
+	    DDI_SUCCESS)
+		return (-1);
+
+	pba_off = pci_config_get32(ppt->pptd_cfg, base + PCI_MSIX_PBA_OFFSET);
+
+	return (pba_off & PCI_MSIX_PBA_BIR_MASK);
+}
+
+static int
+ppt_devmap(dev_t dev, devmap_cookie_t dhp, offset_t off, size_t len,
+    size_t *maplen, uint_t model)
+{
+	minor_t minor;
+	struct pptdev *ppt;
+	int err;
+	int bar;
+
+	minor = getminor(dev);
+
+	if ((ppt = ddi_get_soft_state(ppt_state, minor)) == NULL)
+		return (ENXIO);
+
+#if defined(__amd64)
+	if ((model & DDI_MODEL_MASK) == DDI_MODEL_ILP32)
+		return (ENXIO);
+#endif
+
+	if (off != P2ALIGN(off, PAGESIZE))
+		return (EINVAL);
+
+	if ((bar = ppt_find_pba_bar(ppt)) == -1)
+		return (EINVAL);
+
+	err = devmap_devmem_setup(dhp, ppt->pptd_dip, NULL, bar + 1, off, len,
+	    PROT_ALL, IOMEM_DATA_UNCACHED, &ppt_attr);
+
+	*maplen = len;
+
+	return (err);
+}
+
 
