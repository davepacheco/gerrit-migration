+InstanceFSM.prototype.state_waiting = function (S) {
+    S.validTransitions([
+        'update',
+        'remove'
+    ]);
+
+    S.on(this, 'updateAsserted', function () {
+        S.gotoState('update');
+    });
+
+    S.on(this, 'removeAsserted', function () {
+        S.gotoState('remove');
+    });
+};
+
+InstanceFSM.prototype.state_update = function (S) {
+    S.on(this, 'updateAsserted', function () {
+        S.gotoState('update');
+    });
+
+    S.on(this, 'removeAsserted', function () {
+        S.gotoState('remove');
+    });
+
+    S.gotoState('update.wait');
+};
