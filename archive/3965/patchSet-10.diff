+    var self = this;
+    var wait = 0;
+
+    if (self.pending.refresh) {
+        return;
+    }
+
+    var now = currentMillis();
+    var next = self.lastRefresh + REFRESH_DELAY;
+    if (next > now) {
+        wait = next - now;
+    }
+
+    self.pending.refresh = true;
+    setTimeout(function () {
+        self.pending.refresh = false;
+        self.emit('refreshAsserted');
+    }, wait);
+};
