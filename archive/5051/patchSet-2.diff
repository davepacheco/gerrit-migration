From d5dc783f419e82e104c4039e1c77484b5c607435 Mon Sep 17 00:00:00 2001
From: Brian Bennett <brian.bennett@joyent.com>
Date: Mon, 12 Nov 2018 15:47:09 -0800
Subject: [PATCH] OS-7361 SmartOS initial set up password prompt mangles some
 patterns

---
 scripts/prompt-config.sh | 22 ++++++++++++----------
 1 file changed, 12 insertions(+), 10 deletions(-)

diff --git a/scripts/prompt-config.sh b/scripts/prompt-config.sh
index b99bd5b3..19cc7733 100755
--- a/scripts/prompt-config.sh
+++ b/scripts/prompt-config.sh
@@ -616,13 +616,19 @@ promptnic()
     val=$mac_addr
 }
 
+readpw()
+{
+	IFS='' read -r -s pw
+	printf '%s' "$val"
+}
+
 promptpw()
 {
 	def="$3"
     key="$4"
 
 	if [[ -n ${key} ]]; then
-		preset_val=$(getanswer "${key}")
+		preset_val="$(getanswer "${key}")"
 	fi
 
 	trap "" SIGINT
@@ -630,7 +636,7 @@ promptpw()
 		val=""
 		while [ -z "$val" ]; do
 			if [[ -n ${preset_val} ]]; then
-				val=${preset_val}
+				val="${preset_val}"
 			else
 				if [ -z "$def" ]; then
 					printf "%s: " "$1"
@@ -638,9 +644,7 @@ promptpw()
 					printf "%s [enter to keep existing]: " \
 					    "$1"
 				fi
-				stty -echo
-				read val
-				stty echo
+				val="$(readpw)"
 				echo
 			fi
 			if [ -n "$val" ]; then
@@ -662,7 +666,7 @@ promptpw()
 				fi
 			else
 				if [ -n "$def" ]; then
-					val=$def
+					val="$def"
 					return
 				else
 					echo "A value must be provided."
@@ -673,12 +677,10 @@ promptpw()
 		cval=""
 		while [ -z "$cval" ]; do
 			if [[ -n ${preset_val} ]]; then
-				cval=${preset_val}
+				cval="${preset_val}"
 			else
 				printf "%s: " "Confirm password"
-				stty -echo
-				read cval
-				stty echo
+				cval="$(readpw)"
 				echo
 			fi
 			[ -n "$cval" ] && break
-- 
