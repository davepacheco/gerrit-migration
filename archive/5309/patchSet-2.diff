diff --git a/lib/cnapi/server.js b/lib/cnapi/server.js
index 088c2fc..ea7db5c 100644
--- a/lib/cnapi/server.js
+++ b/lib/cnapi/server.js
@@ -1,5 +1,5 @@
 /*
