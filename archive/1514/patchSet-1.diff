From 36b7bbbded6cb372b47d5374988c6ffe0cca3f24 Mon Sep 17 00:00:00 2001
From: Orlando Vazquez <ovazquez@gmail.com>
Date: Wed, 15 Feb 2017 11:32:17 -0800
Subject: [PATCH] AGENT-1058 logadm calls in agents -setup scripts could use -v
 for more verbosity

---
 smf/method/vm-agent-setup | 6 +++---
 1 file changed, 3 insertions(+), 3 deletions(-)

diff --git a/smf/method/vm-agent-setup b/smf/method/vm-agent-setup
index 0aa1083..cf005cb 100755
--- a/smf/method/vm-agent-setup
+++ b/smf/method/vm-agent-setup
@@ -21,7 +21,7 @@ set -o xtrace
 
 function setup_logadm {
     mkdir -p -m 0755 /var/log/vm-agent
-    logadm -w vm_agent_logs -C 168 -S 1g -c -p 1h \
+    logadm -v -w vm_agent_logs -C 168 -S 1g -c -p 1h \
         -t '/var/log/vm-agent/vm-agent_$nodename_%FT%H:%M:%S.log' \
         /var/svc/log/*vm-agent*.log
 
@@ -29,8 +29,8 @@ function setup_logadm {
     # that the default '-C' (from
     # https://github.com/joyent/smartos-live/blob/master/overlay/generic/etc/logadm.conf)
     # doesn't defeat our attempts to rotate out of "/var/svc/log".
-    /usr/sbin/logadm -r smf_logs
-    /usr/sbin/logadm -w smf_logs -C 8 -c -s 1m '/var/svc/log/*.log'
+    /usr/sbin/logadm -v -r smf_logs
+    /usr/sbin/logadm -v -w smf_logs -C 8 -c -s 1m '/var/svc/log/*.log'
 }
 
 
